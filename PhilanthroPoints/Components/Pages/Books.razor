@page "/Books"
@inject PhilanthroPoints.Services.CatalogService Catalog
@inject PhilanthroPoints.Services.CartState CartSvc

<h2 style="color: var(--brand-blue-600)" class="mb-2">Books</h2>
<p class="text-muted">Stories and learning for every age.</p>

<div class="grid">
    @foreach (var i in Catalog.GetByCategory(Category.Books))
    {
        <article class="item">
            <img src="@i.ImageUrl" alt="@i.Name" />
            <div class="body">
                <div><strong>@i.Name</strong></div>
                <div class="meta">
                    <span><span style="color: var(--brand-orange-600); font-weight:600;">@i.PointsCost</span> pts</span>
                    <button class="btn small primary" @onclick="() => CartSvc.Add(i)">Add</button>
                </div>
            </div>
        </article>
    }
</div>